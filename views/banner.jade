
#pagewrap(ng-controller='bannerCtrl')
    header
        h3
            strong {{title}}
        button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(ng-click='bannerExit()') EXIT
        input#userInput(ng-model='postInput')
        button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(ng-click='addPost()')
            | POST
    hr

    section#left
        .post.demo-card-square.mdl-card.mdl-shadow--2dp(ng-repeat="banner in banners | orderBy: '-date'" ng-if="!($index%3)")
            .mdl-card__title.mdl-card--expand
                h6.mdl-card__title-text {{banner.username}}
            .mdl-card__supporting-text
                | {{banner.body}}
    section#middle
        .post.demo-card-square.mdl-card.mdl-shadow--2dp(ng-repeat="banner in banners | orderBy: '-date'" ng-if="!(($index+1)%3)")
            .mdl-card__title.mdl-card--expand
                h6.mdl-card__title-text {{banner.username}}
            .mdl-card__supporting-text
                | {{banner.body}}
    aside#right
        .post.demo-card-square.mdl-card.mdl-shadow--2dp(ng-repeat="banner in banners | orderBy: '-date'" ng-if="!(($index+2)%3)")
            .mdl-card__title.mdl-card--expand
                h6.mdl-card__title-text {{banner.username}}
            .mdl-card__supporting-text
                | {{banner.body}}
    footer
        h4 Footer
        p Footer text
script(src='https://code.getmdl.io/1.2.0/material.min.js')
