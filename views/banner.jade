#pagewrap(ng-controller='bannerCtrl')
    button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored.postbtn.exitbtn(ng-click='bannerExit()') EXIT

    header(style='margin-top: 70px;')
        .post.demo-card-square.mdl-card.mdl-shadow--2dp.inputcard
            .mdl-card__title.mdl-card--expand(style='background:none')
                h3
                    strong(style='color:black') {{title}}
            .mdl-card__supporting-text.inputgroup
                textarea#userInput(ng-model='postInput')
                button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored.postbtn(ng-click='addPost()')
                    | POST


    section#left
        .post.demo-card-square.mdl-card.mdl-shadow--2dp(ng-repeat="banner in banners | orderBy: '-date'" ng-if="!($index%3)")
            .mdl-card__title.mdl-card--expand
                h6.mdl-card__title-text {{banner.username}}
            .mdl-card__supporting-text
                | {{banner.body}}
    section#middle
        .post.demo-card-square.mdl-card.mdl-shadow--2dp(ng-repeat="banner in banners | orderBy: '-date'" ng-if="!(($index+1)%3)")
            .mdl-card__title.mdl-card--expand
                h6.mdl-card__title-text {{banner.username}}
            .mdl-card__supporting-text
                | {{banner.body}}
    aside#right
        .post.demo-card-square.mdl-card.mdl-shadow--2dp(ng-repeat="banner in banners | orderBy: '-date'" ng-if="!(($index+2)%3)")
            .mdl-card__title.mdl-card--expand
                h6.mdl-card__title-text {{banner.username}}
            .mdl-card__supporting-text
                | {{banner.body}}

script(src='https://code.getmdl.io/1.2.0/material.min.js')
