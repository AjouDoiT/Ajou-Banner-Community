doctype html
html(lang='ko')
    head
        // 반응형 웹을 위한 필수 meta 3개
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='16년 2학기 학술제대비 웹팀')
        meta(name='author', content='11안성수, 13계성혁, 13박명진, 15최홍범, 15고대권')
        title AJOU BANNER COMMUNITY
        include head
body(ng-app='app' ng-controller='appCtrl')
    div(id='loader-wrapper')
        div(class='loader-cover')
            h1(class='loader-content') Ajou Banner Community
            div(id='socialLogin')
                button(class="btn btn-social btn-facebook", ng-click="toggleAuth()")
                    span(class="fa fa-facebook")
                    | Sign in with Facebook
            div(id='img-wrapper')
                img(class='loader-content' src='ring-alt.gif')

    div(id='content')
        // Navigation
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle(id='toggleButton' type='button', data-toggle='collapse',
                            data-target='#bs-example-navbar-collapse-1'
                            ng-init='')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    // nav의 로고부분
                    a.navbar-brand(href='/#/' ng-click='menuClick()') A.B.C.
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/#/map', ng-click='menuClick()') Map
                        li
                            a(href='/#/banner', ng-click='menuClick()') Banner
                        li.dropdown
                            a.dropdown-toggle(data-toggle='dropdown')
                                | Others
                                b.caret
                            ul.dropdown-menu
                                li
                                    a(href='#contact', ng-click='menuClick()') Contact
                                li
                                    a(href='#faq', ng-click='menuClick()') FAQ
                // /.navbar-collapse
            // /.container
        //login modal
        modal(visible='showModal && default')
            .container
                button(class="btn btn-social btn-facebook", ng-click="toggleAuth()")
                    span(class="fa fa-facebook")
                    | Sign in with Facebook

        // Page Content
        ng-view(class='page {{ pageClass }}')
        .jumbotron {{state}}

