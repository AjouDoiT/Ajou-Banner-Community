doctype html
html(lang='ko')
    head
        // 반응형 웹을 위한 필수 meta 3개
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='16년 2학기 학술제대비 웹팀')
        meta(name='author', content='11안성수, 13계성혁, 13박명진, 15최홍범, 15고대권')
        title AJOU BANNER COMMUNITY
        // Bootstrap Core CSS
        link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
        // Custom CSS
        link(href='stylesheets/modern-business.css', rel='stylesheet')
        link(href='stylesheets/style.css', rel='stylesheet')
        // Animation CSS
        link(href='stylesheets/animate.css', rel='stylesheet')
        // Custom Fonts
        link(href='stylesheets/font-awesome.min.css', rel='stylesheet', type='text/css')
        // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
        // WARNING: Respond.js doesn't work if you view the page via file://
        //if lt IE 9
          script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
          script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
body(ng-app='app', ng-controller='appCtrl')
        // Navigation
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle(id='toggleButton' type='button', data-toggle='collapse',
                            data-target='#bs-example-navbar-collapse-1'
                            ng-init='')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    // nav의 로고부분
                    a.navbar-brand(href='/#/' ng-click='menuClick()') A.B.C.
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/#/about', ng-click='menuClick()') About
                        li
                            a(href='/#/banner', ng-click='menuClick()') Banner
                        li.dropdown
                            a.dropdown-toggle(data-toggle='dropdown')
                                | Others
                                b.caret
                            ul.dropdown-menu
                                li
                                    a(href='#contact', ng-click='menuClick()') Contact
                                li
                                    a(href='#faq', ng-click='menuClick()') FAQ
                // /.navbar-collapse
            // /.container
        //login modal
        modal(visible='showModal')
            .container
                button(class="btn btn-social btn-facebook", ng-click="toggleAuth()")
                    span(class="fa fa-facebook")
                    | Sign in with Facebook

        // Page Content

        ng-view(class='page {{ pageClass }}')
        .jumbotron {{state}}
        // jQuery
        script(src='https://code.jquery.com/jquery-3.1.0.slim.min.js',integrity="sha256-cRpWjoSOw5KcyIOaZNo4i6fZ9tKPhYYb6i5T9RSVJG8=" ,crossorigin="anonymous")
        // Bootstrap Core JavaScript
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

            // AngularJS와 Route를 위한 script
        script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
        script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.js')
        script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.js")
        // Contact Form JavaScript
        // Do not edit these files! In order to set the email address and subject line for the contact form go to the bin/contact_me.php file.// Script to Activate the Carousel
        script(src='https://www.gstatic.com/firebasejs/3.2.0/firebase.js')
        script(src='javascripts/app.js')
        script(src='javascripts/authentication.js')